# EditorConfig helps maintain consistent coding styles
root = true

[*.{py,js,ts,tsx,jsx,html,css,md,json,yaml,yml}]
charset = utf-8
end_of_line = lf
insert_spaces = false
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
